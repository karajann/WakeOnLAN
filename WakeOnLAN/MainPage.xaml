<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WakeOnLAN.MainPage"
             Title="Wake on LAN">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Cute dot net bot waving hi to you!" />

            <Label
                Text="Wake on LAN"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Send a magic packet to wake up a computer on your network"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Send a magic packet to wake up a computer on your network" />

            <Label
                Text="MAC Address"
                FontSize="16"
                Margin="0,10,0,5" />

            <Entry
                x:Name="MacAddressEntry"
                Placeholder="Enter MAC address (e.g., 00:11:22:33:44:55)"
                MaxLength="17"
                Keyboard="Default"
                TextChanged="OnMacAddressTextChanged" />

            <Label
                x:Name="ValidationLabel"
                TextColor="Red"
                FontSize="12"
                IsVisible="False" />

            <Label
                Text="Port (optional)"
                FontSize="16"
                Margin="0,10,0,5" />

            <Entry
                x:Name="PortEntry"
                Placeholder="Port (default: 9)"
                Text="9"
                Keyboard="Numeric"
                MaxLength="5" />

            <Button
                x:Name="SendButton"
                Text="Send Wake-on-LAN Packet"
                SemanticProperties.Hint="Sends a wake-on-lan packet to the specified MAC address"
                Clicked="OnSendClicked"
                HorizontalOptions="Fill"
                IsEnabled="False" />

            <Label
                x:Name="StatusLabel"
                FontSize="14"
                HorizontalTextAlignment="Center"
                Margin="0,10,0,0" />

            <VerticalStackLayout Spacing="10" Margin="0,20,0,0">
                <Label
                    Text="How to use:"
                    FontSize="16"
                    FontAttributes="Bold" />
                
                <Label
                    Text="1. Enter the MAC address of the computer you want to wake up"
                    FontSize="12" />
                
                <Label
                    Text="2. Optionally change the port (default is 9)"
                    FontSize="12" />
                
                <Label
                    Text="3. Click 'Send Wake-on-LAN Packet' to send the magic packet"
                    FontSize="12" />
                
                <Label
                    Text="4. Make sure the target computer has Wake-on-LAN enabled in BIOS and network settings"
                    FontSize="12" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
